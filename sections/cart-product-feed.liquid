<div class="cart-grid">
	<div class="container">
		<div class="row"><div class="qmain-title col-lg-12">Recommended for you</div></div>
  			<div class="row">
<ul>
  {% if collections.accessories.products.size > 0 %}

{% for product in collections.accessories.products limit:4 %}

  <li class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
  <img src="{{ product.featured_image | product_img_url: 'medium' }}" alt="{{ product.title | escape  }}" />    
  <a class="title" href="{{ product.url }}">{{ product.title | escape  }}</a>
    <a class="price" href="{{ product.url }}"><sup>$</sup>{{ product.price | money_without_currency | remove: '.00' }}</a>
    <a href="{{ product.url }}"><input type="submit" name="update" class="btn btn--secondary cart__update cart__update--large small--hide" value="Add To Cart"></a>
  </li>  

{% endfor %}

{% endif %}
</ul>
      </div>
  </div>
</div>

